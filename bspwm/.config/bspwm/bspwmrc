#! /bin/sh

sxhkd &
picom &
$HOME/.config/polybar/launch.sh &
$HOME/bin/power.sh &
/usr/bin/lxpolkit &

# Set a random wallpaper from a wallpaper directory
# sh /home/grtcdr/Scripts/randwallp.sh &
#feh --bg-scale ~/Pictures/Wallpapers/minimal.png

bspc monitor -d Web Term Music Code Files Edit Comm Steam

bspc config border_width         1
bspc config window_gap           12
bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true

bspc config focused_border_color "#d8dee9"
bspc config normal_border_color "#4c566a"

bspc rule -a firefox desktop=Web follow=on
bspc rule -a Alacritty desktop=Term follow=on
bspc rule -a spotify desktop=Music follow=on
bspc rule -a code desktop=Code follow=on
bspc rule -a Thunar=Files follow=on
bspc rule -a Gimp desktop=Edit follow=on
bspc rule -a discord-canary desktop=Comm follow=on
bspc rule -a Steam desktop=Steam follow=on
